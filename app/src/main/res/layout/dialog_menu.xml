<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#33FFFFFF"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_modify"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_myedit_bg" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_modify"
        app:srcCompat="@drawable/profile_mydel_bg" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosanskr_medium"
        android:includeFontPadding="false"
        android:text="@string/mycontents_modify"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:lineSpacingExtra="6sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_modify"
        app:layout_constraintEnd_toEndOf="@+id/iv_modify"
        app:layout_constraintStart_toStartOf="@+id/iv_modify"
        app:layout_constraintTop_toTopOf="@+id/iv_modify" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosanskr_medium"
        android:includeFontPadding="false"
        android:text="@string/mycontents_delete"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:lineSpacingExtra="6sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_delete"
        app:layout_constraintEnd_toEndOf="@+id/iv_delete"
        app:layout_constraintStart_toStartOf="@+id/iv_delete"
        app:layout_constraintTop_toTopOf="@+id/iv_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>